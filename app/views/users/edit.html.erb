<h1 class="MenuPageTitle">My account</h1>
<section class="Account">
  <ul>
    <%=form_with(url: "/users/#{@user.id}", method: "put")do%>
      <li class="Details-item">
        <label class="Details-label">Account Id :</label>
        <%=text_field_tag 'user-id', "EatUp-#{@user.id}",  class: "Details-input",disabled: true%>
      </li>
      <li class="Details-item">
        <label class="Details-label">User Name :</label>
        <%=text_field_tag 'first_name', "#{@user.first_name}",  class: "Details-input",minlength: 4, autofocus: true%>
      </li>
      <li class="Details-item">
        <label class="Details-label">Contact no :</label>
<%= telephone_field_tag 'phone_number', "#{@user.phone_number}", class: 'Details_input',pattern: "[0-9]{10}",placeholder: "0123456789"%>

      </li>
      <li class="Details-item">
        <label class="Details-label">Mail ID :</label>
        <input class="Details-input",name="User_mail"  value="<%= @user.email %>" disabled>
      </li>
      <li class="Details-item">
        <label class="Details-label">New Password :</label>
         <%=text_field_tag 'password','' , class: "Details-input"%>
      </li>
      <%= submit_tag "Update",class: 'MenuBar-button',data: {disable_with: "updating.."}%>
    <%end%>
  </ul>
</section>
