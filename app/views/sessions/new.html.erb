<div class="NewUsersPage">
  <p class="NewUsers-title">Sign in into your account</p>
  <section class="UsersNew">
    <%=form_with url: sessions_path do |form| %>
      <div class="Form-section">
        <p class="Form-section-label">Email Address</p>
        <%= form.email_field :email , class: "Form-section-input",placeholder: "Email", autofocus: true%>
      </div>
      <div class="Form-section">
        <p class="Form-section-label">Password</p>
        <%= form.password_field :password , class: "Form-section-input",placeholder: "Password"%>
      </div>
      <div class="Form-section-authenticate">
        <%= button_tag(type: "submit", class: "Form-section-submit") do %>
          <%= content_tag('i', nil, class: 'fa fa-sign-in') %> Sign in!
        <% end %>
        <%= link_to "New User?",new_user_path,class: 'Cafeteria-authenticate'%>
      </div>
    <%end%>
  </section>
</div>
