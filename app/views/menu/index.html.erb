<article class="MenuPage">


<div class="Menus">
  <hr class="Cafeteria-header-line">
  <h1 class="MenuPageTitle">MENUS</h1>
</div>
<div class="MenuContent">
  <div >
    <img class="MenuContent-image" src="food.jpg">
  </div>
  <div>
    <% Menu.menu.each do |menu| %>
    <div class="Menu">
      <%= render partial: "menu-section" ,locals:{section_title: menu[0].menu_name , menu_items: MenuItem.menu_items(menu[0].id) }%>
      <% if menu[1] %>
       <%= render partial: "menu-section" ,locals:{  section_title: menu[1].menu_name , menu_items: MenuItem.menu_items(menu[1].id) }%>
      <%end %>
    </div>
    <% end %>
    <form method="get" action="/cart_items" method="GET">
      <button class="CartButton button1"type="submit">Go to Cart</button>
    </form>
  </div>
</div>
</article>
