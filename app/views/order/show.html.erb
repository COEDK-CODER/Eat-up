<h1 class="MenuPageTitle">Order Details</h1>
<table class="OrderCart">
	<tr>
		<th>Name</th>
		<td><%= @current_user.first_name%></td>
		<th>Total </th>
		<td><%= @order.amount%></td>
	</tr>
	<tr>
		<th>Order Id</th>
		<td>EATORD<%= @order.id%></td>
		<th>Order Type</th>
		<td>Home Delivered</td>
	</tr>
	<tr>
		<th> Ordered at</th>
		<td> <%= @order.created_at.to_formatted_s(:short)%></td>
		<th> Delivered at</th>
		<% if @order.order_status.eql?("Delivered")%>
			<td><%= @order.updated_at.to_formatted_s(:short)%></td>
		<% else%>
			<td>-------------</td>
		<% end %>
	</tr>
</table>
<table class="OrderCart">
	<thead>
		<tr>
			<th>S No.</th>
			<th>Items</th>
			<th>Price</th>
			<th>Quantity</th>
			<th>Total</th>
		</tr>
	</thead>
	<tbody>
		<% @order.order_items.each_with_index do |order_item,i|%>
			<tr>
				<td> <%= i+1	 %> </td>
				<td> <%= order_item.menu_item_name%> </td>
				<td> <%= order_item.menu_item_price%> </td>
				<td> <%= order_item.quantity %> </td>
				<td> <%= order_item.menu_item_price * order_item.quantity %> </td>
			</tr>
		<% end %>
	</tbody>
</table>
<%= link_to(:back,class: 'Menu-button  Collapse') do %>
  <%= content_tag('i', nil, class: 'fa fa-compress') %> Back
<% end %>
