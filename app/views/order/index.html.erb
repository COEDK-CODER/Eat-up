<h1 class="MenuPageTitle">My Orders</h1>

<table class="OrderCart">
<% if flash[:notice] %>
    <p class="Flash-notice message"> <%= flash[:notice]%></p>
  <% end %>
	<thead>
		<tr>
			<th>S No.</th>
			<th>Date</th>
			<th>Order-Id</th>
			<th>Amount</th>
			<th>Status</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each_with_index do |order,i|%>
			<tr>
				<td><%= i+1%></td>
				<td> <%= order.order_date%> </td>
				<td> EATORD<%= order.id%></td>
				<td><%= order.amount%></td>
    		<td>
					<p class="OrderStatus <% if order.order_status=="Not Delivered"%>  UnDeliver_button <% end %>">
		 			<%= order.order_status%></p>
				</td>
				<td>
					<%= link_to(order_path(order.id),class: 'Menu-button TrashIcon') do %>
    				<%= content_tag('i', nil, class: 'fa fa-external-link') %> Order Details
    			<% end %>
				</td>
			</tr>
		<%end%>
	</tbody>
</table>
<img src="https://i.postimg.cc/tJxgQ7hq/IMG-20200527-143725.jpg" alt="Order" class="OrderBanner">
